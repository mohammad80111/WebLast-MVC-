<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered   table-striped" style="margin-top:50px">
            <thead class="table__head">
                <tr class="winner__table">

                    <th><i class="fa fa-user" aria-hidden="true"></i> Teacher Name</th>
                    <th><i class="fa fa-child" aria-hidden="true"></i> Teacher Age</th>
                   

                    <th><i class="fa fa-trash" aria-hidden="true"></i> Delete</th>

                </tr>
            </thead>
            @foreach (Teacher I in Model)
            {
                <tbody>
                    <tr class="winner__table">
                        <td>@I.TeacherName</td>
                        <td>@I.TeacherAge</td>
                      

                        <td><a href="/Teacher/Delete/@I.TeacherId"><i class="fa fa-trash-o" style="font-size:20px;color:#4F89D4"></i></a></td>

                    </tr>



                </tbody>
            }
        </table>
    </div>
</div>

